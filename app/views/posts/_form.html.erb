<%= simple_form_for [topic, post] do |f| %>
  <%= f.input :title, input_html: { class: 'form-control' }, required: true %>
  <%= f.input :body, input_html: { class: 'form-control' }, required: true  %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>